{
  "name": "fixly",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:realtime": "node scripts/test-realtime.js",
    "test:auth": "node scripts/test-optimized-auth-system.js",
    "test:comprehensive": "node scripts/final-comprehensive-test.js",
    "verify:auth": "node scripts/verify-auth-implementation.js",
    "test:flows": "node scripts/test-complete-auth-flows.js",
    "test:all": "npm run test && npm run test:integration && npm run test:realtime && npm run test:auth && npm run test:flows",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "clean": "rm -rf .next out coverage",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "postbuild": "next-sitemap",
    "prepare": "husky install",
    "verify:setup": "node scripts/test-realtime.js",
    "health": "curl http://localhost:3000/api/health || echo 'Server not running'"
  },
  "dependencies": {
    "@auth/mongodb-adapter": "^3.10.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tailwindcss/forms": "^0.5.3",
    "@tanstack/query-sync-storage-persister": "^5.17.15",
    "@tanstack/react-query": "^5.17.15",
    "@tanstack/react-query-devtools": "^5.85.3",
    "@tanstack/react-query-persist-client": "^5.17.15",
    "@upstash/redis": "^1.35.4",
    "ably": "^2.13.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "beasties": "^0.3.5",
    "class-variance-authority": "^0.7.0",
    "cloudinary": "^1.41.0",
    "clsx": "^2.0.0",
    "cookie": "^1.0.2",
    "cors": "^2.8.5",
    "critters": "^0.0.23",
    "dotenv": "^16.0.3",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "framer-motion": "^10.16.0",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.28.0",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.283.0",
    "mongodb": "^6.17.0",
    "mongoose": "^8.0.3",
    "multer": "^2.0.1",
    "next": "^14.2.30",
    "next-auth": "^4.24.11",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "razorpay": "^2.9.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "react-select": "^5.8.0",
    "redis": "^5.8.2",
    "sharp": "^0.33.0",
    "sonner": "^1.2.4",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "validator": "^13.15.15",
    "xss": "^1.0.15",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.4",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.30",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.2",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "overrides": {
    "undici": "^6.0.0",
    "cookie": "^1.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(ably|bson|mongodb|mongoose)/)"
    ],
    "collectCoverageFrom": [
      "components/**/*.{js,jsx,ts,tsx}",
      "lib/**/*.{js,jsx,ts,tsx}",
      "utils/**/*.{js,jsx,ts,tsx}",
      "hooks/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
